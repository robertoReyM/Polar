<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent" tools:context="com.smartplace.polar.fragments.FeatureFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_feature"
            android:text="Feature 1"
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"/>
        <ListView
            android:id="@+id/list_requirements"
            android:layout_width="match_parent"
            android:divider="@null"
            android:choiceMode="singleChoice"
            android:fadingEdgeLength="10dp"
            android:cacheColorHint="@color/white"
            android:requiresFadingEdge="vertical"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <!--android:transcriptMode="alwaysScroll"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/ll_new_requirement"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_gray_rounded_stroke"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_btn_type"
                    android:layout_width="30dp"
                    android:src="@drawable/ic_expand_less_black_24dp"
                    android:layout_height="30dp" />
                <EditText
                    android:id="@+id/et_requirement"
                    android:layout_width="match_parent"
                    android:hint="@string/requirement"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_send"
                android:text="Enviar"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:background="@drawable/bg_blue_rouded"
                android:layout_width="wrap_content"
                android:layout_height="40dp" />
        </LinearLayout>
    </LinearLayout>


</FrameLayout>
